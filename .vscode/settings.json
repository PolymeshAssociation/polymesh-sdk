{
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.quoteStyle": "single",
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "cSpell.ignorePaths": [
    "package.json",
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    "src/polkadot",
    "src/middleware",
  ],
  "cSpell.ignoreRegExpList": [
    "/from\\s+(['\"]).*\\1/", // ignore imports
    "/\/\/ TODO @\\w+/", // ignore github handles in TODOs
    "/0x.+/" // ignore hex values
  ],
  "cSpell.words": [
    "auths",
    "bignumber",
    "Cins",
    "consts",
    "Cusip",
    "Custodied",
    "datetime",
    "Dids",
    "dispatchable",
    "dispatchables",
    "Encodable",
    "Extrinsics",
    "Falsyable",
    "inmemory",
    "Isin",
    "millis",
    "modlpm",
    "monitz",
    "offchain",
    "optionize",
    "Permill",
    "Permissioned",
    "polkadot",
    "Polymesh",
    "POLYX",
    "Promisified",
    "PUIS",
    "Ristretto",
    "trsry",
    "unserialize",
    "unserialized",
    "Unsub",
    "w3cwebsocket",
    "wellformed",
    "Whts"
  ]
}
